/* Watch Command */
/* stylus -w lobby.styl -o lobby.css */ 

body 
	background-image url("../imgs/PeltBG.jpg")
	background-size cover
	background-repeat no-repeat
	background-position center center
	width 100vW
	height 100vH
	overflow hidden
	font-family 'Indie Flower', cursive !important
	


.mainWrapper
	width 40%
	height 500px
	margin auto
	margin-top 100px
	display flex
	flex-direction row
	&__leftSideLoader
		width 50%
		height 100%
		overflow-y scroll
	&__rightSideLoader
		width 50%
		height 100%
		overflow-y scroll

.bg
	background-color rgba(0,0,0,0.7)
	color white
	height 300px
	& img
		width 100%
		height 100px
		margin-top 15px
		margin-bottom 15px
		
	
.infoAndButton
	width 100%
	height 140px
	background-image url("../imgs/rustyMetalBG.jpg")
	background-size cover
	background-repeat no-repeat
	background-position center center
	font-size 13px
	& button
		background-color #808080
		border 0px
		width 100%
		height 35%

.startGameButton 
	position absolute
	left 50%
	bottom 0px
	width 40%
	height 50px
	transform translate(-50%, 0)
	font-size 25px
	&:hover
		background-color #964448
		border 0px
	


.mainTitle 
	margin-top 20px
	position absolute
	left 50%
	top 0px
	transform translate(-50%, 0)
	color white
	text-align center


.tittleHolder 
	background-color rgba(0,0,0,0.7)
	width 40%
	height 80px
	margin-top 10px
	position absolute
	left 50%
	top 0px
	transform translate(-50%, 0)


.selectionText 
	background-color rgba(0,0,0,0.7)
	color white



/* Desktops and laptops ----------- */
@media screen and (min-width : 1224px) 
	.mainWrapper
		height 600px;


/* Large screens ----------- */
@media screen and (min-width : 1824px) 
	.mainWrapper
		height 800px;































