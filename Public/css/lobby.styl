.mainWrapper
	background-color black
	width 70%
	height 700px
	margin auto
	margin-top 100px
	display flex
	flex-direction row
	&__leftSideLoader
		background-color green
		width 50%
		height 100%
		overflow-y scroll
	&__rightSideLoader
		background-color yellow
		width 50%
		height 100%
		overflow-y scroll

.bg
	background-color black
	color white
	& img
		width 100%
		height 60%
	
.infoAndButton
	width 100%
	height 40%
	background-color green
	& button
		position absolute
		right 10px
		top 60%
		width 60px
		height 40%
	